---
import Layout from '@/layouts/Layout.astro';
---

<Layout>
  <!-- Banner Section -->
  <section class="banner-section press-banner">
    <div class="banner-image">
      <div class="banner-content">
        <h1>PRESS</h1>
      </div>
    </div>
  </section>

  <!-- Press Articles Section -->
  <section class="press-articles-section">
    <div class="container">
      <h2 class="section-title"><span class="title-orange">PRESS</span> <span class="title-blue">Features</span></h2>
      <div class="press-articles">
        <!-- Article 1 -->
        <div class="press-article">
          <div class="article-image">
            <img src="images/press/ARTICLE1.jpg" alt="New York Times Article" />
          </div>
          <div class="article-content">
            <h3 class="article-title">The New York Times</h3>
            <p class="article-description">
              "Breaking Barriers: How Cole & Charisma are Changing Perceptions of Disability" - An in-depth feature on
              how this interabled couple is changing perceptions through their social media presence.
            </p>
            <a href="#" class="article-link">Read Article</a>
          </div>
        </div>

        <!-- Article 2 -->
        <div class="press-article">
          <div class="article-image">
            <img src="images/press/ARTICLE2.jpg" alt="Today Show Interview" />
          </div>
          <div class="article-content">
            <h3 class="article-title">Today Show</h3>
            <p class="article-description">
              "Love Beyond Limitations: Cole & Charisma Share Their Journey" - Morning segment featuring Cole & Charisma
              discussing their relationship and advocacy work.
            </p>
            <a href="#" class="article-link">Watch Interview</a>
          </div>
        </div>

        <!-- Article 3 -->
        <div class="press-article">
          <div class="article-image">
            <img src="images/press/ARTICLE3.jpg" alt="Washington Post Article" />
          </div>
          <div class="article-content">
            <h3 class="article-title">Washington Post</h3>
            <p class="article-description">
              "Influencers with Impact: How Cole & Charisma Are Changing the Conversation About Disability" - Feature
              story on their advocacy work and growing influence in the disability community.
            </p>
            <a href="#" class="article-link">Read Article</a>
          </div>
        </div>

        <!-- Article 4 -->
        <div class="press-article">
          <div class="article-image">
            <img src="images/press/ARTICLE4.jpg" alt="RespectAbility Feature" />
          </div>
          <div class="article-content">
            <h3 class="article-title">RespectAbility</h3>
            <p class="article-description">
              "Voices for Change: Cole & Charisma's Mission to Normalize Disability in Media" - Interview about their
              advocacy for better representation of people with disabilities in media.
            </p>
            <a href="#" class="article-link">Read Interview</a>
          </div>
        </div>

        <!-- Article 5 -->
        <div class="press-article">
          <div class="article-image">
            <img src="images/press/ARTICLE5.jpg" alt="Hollister Campaign" />
          </div>
          <div class="article-content">
            <h3 class="article-title">Hollister</h3>
            <p class="article-description">
              "Inclusive Fashion: Cole & Charisma Partner with Hollister for Groundbreaking Campaign" - Coverage of
              their collaboration promoting inclusive fashion.
            </p>
            <a href="#" class="article-link">View Campaign</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
